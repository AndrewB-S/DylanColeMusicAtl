---
import Icons from "../molecules/Icons.astro";
import { navListItems } from "../atoms/NavListItems";
---

<footer class="flex flex-col items-center gap-4 bg-black w-full py-10">
  <div class="flex flex-col items-center gap-6 lg:gap-8">
    <ul class="flex items-center gap-4">
      {
        navListItems.map((item) => {
          return (
            <li>
              <a class="hover:text-gray-600 text-xl uppercase" href={item.link}>
                {item.title}
              </a>
            </li>
          );
        })
      }
    </ul>

    <Icons />
  </div>

  <small>Website hand-coded by Andrew Sneed</small>
</footer>
