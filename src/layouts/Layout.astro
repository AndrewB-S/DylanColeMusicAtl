---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Nav from "../components/organisms/Nav.astro";
import Footer from "../components/organisms/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Discover Atlanta-based country artist Dylan Cole, whose debut single 'Stuck in Calabasas' is captivating audiences on streaming platforms. Ideal for any venue or event, from intimate gatherings to large festivals, Dylan offers unforgettable performances with his soulful country melodies and heartfelt lyrics. Book Dylan Cole now for an authentic country music experience that resonates with everyone within earshot."
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <script
      defer
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script defer>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", (user) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>

    <title>{title}</title>
  </head>
  <body class="flex flex-col items-center">
    <Nav />
    <slot />
    <Footer />
  </body>
</html>
<style>
  html {
    scroll-behavior: smooth;
  }
</style>
